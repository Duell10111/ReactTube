    {
      "type": "chore",
      "section": "🔧 Chore",
      "hidden": false
    },
    {
      "type": "style",
      "section": "💄 Style",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "⚡️ Performance",
      "hidden": false
    },
    {
      "type": "revert",
      "section": "⏪ Revert",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "🚀 Continuous Integration",
      "hidden": false
